<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ProductTaxView">
    
    <data>
        <import type="android.view.View"/>
        <variable
            name="tax_modelview"
            type="shdv.iotdev.rsproductstest.viewmodels.impl.ProductTaxVM" />
    </data>
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tax_shape"
        android:padding="5dp"
        >


        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@{tax_modelview.model.name}"
            android:scaleType="matrix"
            android:layout_margin="5dp"
            android:background="@drawable/image_shape"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CategoryText"
            android:id="@+id/tax_product_category"
            app:layout_constraintLeft_toRightOf="@+id/product_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{tax_modelview.model.category}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tax_product_name"
            style="@style/ProductText"
            app:layout_constraintLeft_toRightOf="@+id/product_icon"
            app:layout_constraintTop_toBottomOf="@id/tax_product_category"
            android:text="@{tax_modelview.model.name}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tax_product_producer"
            style="@style/ProducerText"
            app:layout_constraintLeft_toRightOf="@+id/product_icon"
            app:layout_constraintTop_toBottomOf="@id/tax_product_name"
            android:text="@{tax_modelview.model.producer}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tax_product_price"
            style="@style/PriceText"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/product_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{Double.toString(tax_modelview.model.price)}" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintLeft_toRightOf="@id/tax_product_price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ruble_icon"
            android:scaleType="fitCenter"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/button_focus"
                style="@style/ButtonText"
                android:src="@drawable/cart_30"
                android:id="@+id/add_to_cart"
                android:text="@string/to_cart"
                android:visibility="@{ tax_modelview.model.count == 0 ? View.VISIBLE : View.GONE}"
                android:onClick="@{() -> tax_modelview.addToBasket()}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_focus"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{ tax_modelview.model.count > 0 ? View.VISIBLE : View.GONE}">
        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/button_focus"
            style="@style/ButtonText"
            android:text="@string/minus"
            android:onClick="@{() -> tax_modelview.decQuantity()}"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                style="@style/ButtonText"
                android:text="@{Integer.toString(tax_modelview.model.count)}"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/button_focus"
                style="@style/ButtonText"
                android:text="@string/plus"
                android:onClick="@{() -> tax_modelview.incQuantity()}"/>

        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>